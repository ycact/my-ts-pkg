root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{css,scss,sass,less,styl}]
indent_style = space
indent_size = 2
max_line_length = 80

[*.{php,php.dist}]
indent_style = space
indent_size = 4
max_line_length = 120

[*.py]
indent_style = space
indent_size = 4
max_line_length = 88
ensure_newline_before_comments = true

[*.{md,mdx}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
max_line_length = off
